{
    "version": "2.0.0",
    "command": "bash",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "command": "openfl",
            "taskName": "build html5",
            "isBuildCommand": true,
            "args": [
                "build", "./project.xml", "html5", "-debug", "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples/openfl"
            },
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        {
            "command": "openfl",
            "taskName": "build html5 display list",
            "isBuildCommand": true,
            "args": [
                "build", "./project.xml", "html5", "-Dlist", "-debug", "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples/openfl"
            },
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        {
            "command": "openfl",
            "taskName": "build export",
            "isBuildCommand": true,
            "args": [
                "build", "./project.xml", "html5", "-debug", "-Dexport", "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples/openfl"
            },
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        {
            "command": "openfl",
            "taskName": "build html5 exporter",
            "isBuildCommand": true,
            "args": [
                "build", "./project.xml", "html5", "-debug", "-Dexport", "-v"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples/html5-exporter"
            },
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        {
            "command": "sh",
            "taskName": "build cli exporter",
            "isBuildCommand": true,
            "args": [
                "test-mac.sh"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples/cli-exporter"
            },
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        {
            "command": "sh",
            "taskName": "build hl",
            "isBuildCommand": true,
            "args": [
                "make.sh", "-D test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples/heaps"
            },
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        {
            "command": "haxe",
            "taskName": "build js",
            "isBuildCommand": true,
            "args": [
                "html5.hxml", "-D", "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/samples/heaps"
            },
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        /*{
            "type": "hxml",
            "label": "Heaps JS",
            "file": "build.hxml",
            "problemMatcher": [
                "$haxe-absolute",
                "$haxe",
                "$haxe-error",
                "$haxe-trace"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }*/
    ],
    "problemMatcher": "$haxe"
}
