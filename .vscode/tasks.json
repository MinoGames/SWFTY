{
    "version": "2.0.0",
    "command": "bash",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "command": "openfl",
            "taskName": "build html5",
            "isBuildCommand": true,
            "args": [
                "build", "./samples/openfl/project.xml", "html5", "-debug", "-v"
            ],
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        {
            "command": "openfl",
            "taskName": "build export",
            "isBuildCommand": true,
            "args": [
                "build", "./samples/openfl/project.xml", "html5", "-debug", "-Dexport", "-v"
            ],
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        {
            "command": "sh",
            "taskName": "build hl",
            "isBuildCommand": true,
            "args": [
                "samples/heaps/make.sh", "-D test"
            ],
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },{
            "command": "sh",
            "taskName": "build js",
            "isBuildCommand": true,
            "args": [
                "samples/heaps/html5.sh", "-D test"
            ],
            "presentation": {
                "echo": false,
                "focus": false,
                "panel": "dedicated",
                "reveal": "silent"
            }
        },
        /*{
            "type": "hxml",
            "label": "Build",
            "file": "build.hxml",
            "problemMatcher": [
                "$haxe-absolute",
                "$haxe",
                "$haxe-error",
                "$haxe-trace"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }*/
    ],
    "problemMatcher": "$haxe"
}
